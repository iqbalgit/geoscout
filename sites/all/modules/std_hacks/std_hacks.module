	$longitude = isset($node->field_location['und'][0]['lng']) ? $node->field_location['und'][0]['lng'] : '77.08555';
	$open_hour = isset($node->field_opening_hours['und'][0]['value']) ? $node->field_opening_hours['und'][0]['value'] : 0;

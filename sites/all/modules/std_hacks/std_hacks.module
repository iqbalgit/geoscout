	$parkingavl = isset($node->field_parking_available['und'][0]['value']) ? $node->field_parking_available['und'][0]['value'] : 'no';
	if($parkingavl == 'yes') {
		$parkingavl = 'Y';
	}
	else {
		$parkingavl = 'N';
	}
	$cctv = isset($node->field_cctv['und'][0]['value']) ? $node->field_cctv['und'][0]['value'] : 'no';
